{
  "manifest_version": 3,
  "name": "Safety Shield",
  "version": "1.0.0",
  "description": "A friendly browser extension to protect elderly users from dangerous websites and email scams",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://gmail.com/*",
    "https://html-detect-754322588434.australia-southeast1.run.app/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Safety Shield",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "css": ["content-script.css"]
    },
    {
      "matches": ["https://mail.google.com/*", "https://gmail.com/*"],
      "js": ["gmail-content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["warning-overlay.html", "popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
